@page
@model PhoneShop.Pages.AdminListUsersModel
@{
    Layout = "_LayoutAdmin";
}

<form method="get" class="mb-3">
    <div class="row pt-3">
        <div class="col">
            <div class="input-group" style="padding-left:120px; padding-right:50px">
                <a style="padding-right:10px; padding-top:5px">Поиск по логину: </a>
                <input class="form-control" asp-for="Search" />
                <div class="input-group-append" style="padding-left:20px">
                    <button type="submit" class="btn btn-primary">Поиск</button>
                </div>
            </div>
        </div>
        <div class="col">
        </div>
    </div>
</form>


<form>
    <table class="table">
        <thead>
            <tr>
                <th>Логин</th>
                <th>Email</th>
                <th>Номер тел</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UsersList)
            {
                var Id = item.Id;

                <tr>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <form method="post">
                            <a asp-page="AdminEditAccount" asp-route-id="@Id" class="btn btn-primary">Редактировать</a>
                            <button type="submit" formmethod="post" asp-page-handler="Delete" asp-route-id="@Id" class="btn btn-primary">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>