@page
@model PhoneShop.Pages.LoginFormModel
@{
    ViewData["Title"] = "Авторизация";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<form method="post">
    <div class="container" style="margin-top:250px; padding-left:450px; padding-right:450px">
        @if (TempData["SM"] != null)
        {
            <div class="alert alert-success text-center">
                @TempData["SM"]
            </div>
        }
        @if (TempData["DM"] != null)
        {
            <div class="alert alert-danger text-center">
                @TempData["DM"]
            </div>
        }
        <!-- Email input -->
        <div class="text-center mb-4">
            <a asp-page="Shared/Index" class="">Вернуться на главную</a>
        </div>
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.Login" class="text-danger text-center"></span>
            <input asp-for="InputModel.Login" type="text" class="form-control" />
            <label class="form-label">Логин</label>
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.Login" class="text-danger text-center"></span>
            <input asp-for="InputModel.Password" type="password" class="form-control" />
            <label class="form-label">Пароль</label>
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
            <div class="col d-flex justify-content-center">
                <!-- Checkbox -->
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" checked />
                    <label class="form-check-label"> Запомнить </label>
                </div>
            </div>

            <div class="col">
                <!-- Simple link -->
                <a href="#!">Забыли пароль?</a>
            </div>
        </div>

        <!-- Submit button -->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-block mb-4">Войти</button>
        </div>
        <!-- Register buttons -->
        <div class="text-center">
            <p>Не зарегистрированы? <a asp-page="/RegisterForm">Зарегистрироваться</a></p>
        </div>
    </div>
</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
<script src="~/js/site.js" asp-append-version="true"></script>