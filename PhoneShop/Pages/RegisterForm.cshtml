@page
@model PhoneShop.Pages.RegisterFormModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


<form method="post">
    <div class="container" style="margin-top:150px; padding-left:450px; padding-right:450px">
        <!--Редирект обратно на сайт-->
        <div class="text-center mb-4">
            <a asp-page="Shared/Index" class="">Вернуться на главную</a>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <!--Логин-->
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.Login" class="text-danger text-center"></span>
            <input asp-for="InputModel.Login" type="text" class="form-control" />
            <label asp-for="InputModel.Login" class="form-label">Логин</label>
        </div>
        <!--Почта-->
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.Email" class="text-danger text-center"></span>
            <input asp-for="InputModel.Email" type="email" class="form-control" />
            <label asp-for="InputModel.Email" class="form-label" >Адрес почты</label>
        </div>
        <!--Номер телефона-->
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.PhoneNumber" class="text-danger text-center"></span>
            <input asp-for="InputModel.PhoneNumber" type="tel" class="form-control" />
            <label asp-for="InputModel.PhoneNumber" class="form-label">Номер телефона</label>
        </div>
        <!--Паароль-->
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.Password" class="text-danger text-center"></span>
            <input asp-for="InputModel.Password" type="password" class="form-control" />
            <label asp-for="InputModel.Password" class="form-label" >Пароль</label>
        </div>
        <!--Второй раз пароль-->
        <div class="form-outline mb-4">
            <span asp-validation-for="InputModel.ConfPassword" class="text-danger text-center"></span>
            <input asp-for="InputModel.ConfPassword" type="password" class="form-control" />
            <label asp-for="InputModel.ConfPassword" class="form-label">Подтвердить пароль</label>
        </div>

        <!--Подтреждение регистрации-->
        <div class="text-center">
            <button type="submit" class="btn btn-primary btn-block mb-4">Зарегистрироваться</button>
        </div>
        <!--Перенаправлениие на форму входа-->
        <div class="text-center">
            <p>Уже зарегистрированы? <a asp-page="/LoginForm">Войти</a></p>
        </div>
    </div>
</form>

